# Mutt Inferface - UI
set sidebar_visible
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
color status yellow black 
color normal brightblue black 
color error white black
color tilde white black
color message cyan black 
color markers red black 
color attachment black cyan 
color search brightgreen black 
color indicator white black 
color tree yellow black 

# Mails Colors 
set ts_enabled=yes
set status_format = "-%r-Mutt:%?V?{%.35V}? [Msgs:%?M?%M/?%m%?n? New:%n?%?o? Old:%o?%?d? Del:%d?%?F?  Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?%?l? %l?]--(%s/%S)-%>-(%P)--"
set ts_icon_format=$ts_status_format
